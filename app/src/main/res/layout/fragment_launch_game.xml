<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="hearc.ch.starstrat.LaunchGameFragment"
    android:weightSum="5">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="4">

        <TextView
            android:id="@+id/timerTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/abc_action_bar_home_description"/>

        <TextView
            android:id="@+id/timerActuel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="@string/abc_action_bar_home_description"/>

        <Button
            android:id="@+id/buttonLaunchGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_speed_fragment_return"/>

        </LinearLayout>
</LinearLayout>
